<div class="container-fluid">
  <div class="jumbotron" style="border:1px solid grey;border-radius: 3px;background-color:#fff">
    <div class="row">
      <div class="col-md-3">
        <% if @user.avatar? %>
          <%= image_tag(@user.avatar(:medium), class: 'img-circle') %>
        <% else %>
          <div class="user-default"><%= image_tag('user.png') %></div>
        <% end %>
      </div>
      <div class="col-md-6">
        <div class="user-name">
          <h1><%= @user.name %></h1>
        </div>
      </div>
    </div><br />
  </div>
  <% if current_user == @user %>
    <%= link_to 'Add a new product', new_listing_path, class: "btn btn-default" %><br /><br />
  <% end %>
  <h2 style="text-align:center">Available Products</h2>
  <%= render 'listings/listing', obj: @user_listings %> 
</div>

